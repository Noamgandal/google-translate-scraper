{
  "manifest_version": 3,
  "name": "Google Translate Starred Words Scraper",
  "version": "1.0",
  "description": "Automatically scrapes starred words from Google Translate and saves them to Google Sheets",
  
  "permissions": [
    "storage",
    "alarms",
    "tabs",
    "activeTab",
    "scripting",
    "identity"
  ],
  
  "host_permissions": [
    "https://translate.google.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Google Translate Starred Words Scraper"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  
  "oauth2": {
    "client_id": "734462042602-7f6r7h8851tjprf7lqn5l1726at886pr.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/spreadsheets",
      "https://www.googleapis.com/auth/gmail.send",
      "https://www.googleapis.com/auth/userinfo.email"
    ]
  }
} 